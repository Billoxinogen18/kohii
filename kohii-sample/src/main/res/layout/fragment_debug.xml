<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

  <androidx.core.widget.NestedScrollView
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/dummyText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/activity_vertical_margin"
          android:lineSpacingMultiplier="1.15"
          android:padding="@dimen/activity_vertical_margin"
          android:text="@string/lib_intro"
          />

      <com.google.android.exoplayer2.ui.PlayerView
          android:id="@+id/playerView1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="240dp"
          />

      <Space
          android:layout_width="match_parent"
          android:layout_height="48dp"
          />

      <com.google.android.exoplayer2.ui.PlayerView
          android:id="@+id/playerView2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="240dp"
          />

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/longText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/activity_vertical_margin"
          android:lineSpacingMultiplier="1.15"
          android:padding="@dimen/activity_vertical_margin"
          android:text="@string/large_text"
          />
    </androidx.appcompat.widget.LinearLayoutCompat>
  </androidx.core.widget.NestedScrollView>

  <androidx.appcompat.widget.LinearLayoutCompat
      android:id="@+id/buttons"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:background="@color/cardview_light_background"
      android:gravity="end"
      android:orientation="vertical"
      >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bindView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bind/Rebind to PlayerView 1"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bindView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bind/Rebind to PlayerView 2"
        />

  </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>